---
layout: base
template: article
scripts: ["/js/article.mjs"]
---
<article class="h-entry page page--template-{{ template }}" id="main">
  <header class="page__header">
    <h1 class="p-name">{{ title }}</h1>
    <p><a class="p-author h-card" href="/">
    {% image '/img/avatar.jpg', 'u-photo avatar avatar--circle', 'фото Андрея Гурылева', '', '20,40' %} Андрей Гурылев</a> опубликовал <time class="post-date dt-published" datetime="{{ date | htmlDateString }}"><a class="u-url" href="{{ page.url | url }}">{{ date | readableDate }}</a></time>
    в
    {% for tag in tags %}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" rel="tag" class="p-category tag">#{{ tag }}</a>
    {% endfor %}

    </p>
  </header>

  <p class="page__summary p-summary">{{ description }}</p>

  {% set table_of_contents = content | toc %}
  {% if table_of_contents %}
  <aside class="page__nav">
    <details class="toc">
      <a href="#content" class="screen-reader-only">Пропустить оглавление</a>
      <summary><h2>Оглавление статьи</h2></summary>
      {{ table_of_contents | safe }}
      <a href="#main">↑ К началу статьи</a>
    </details>
  </aside>
  {% endif %}

  <div class="e-content page__content" id="content">
  {{ content | safe }}
  </div>

  <footer class="page__footer">
    {# <p><a href="{{ '/blog/' | url }}">← Вернуться</a></p> #}
  </footer>
  <div class="progress-bar"></div>
</article>
