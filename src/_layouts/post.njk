---
layout: base
template: post
---
<header class="page__title">
<h1 class="p-name">{{ title }}</h1>
<p>Опубликовано <time class="post-date dt-published" datetime="{{ date }}">{{ date | readableDate }}</time></p>
</header>
<aside class="page__nav">
  <div class="toc">
    {{ content | toc | safe }}
  </div>
</aside>
{{ content | safe }}

<footer class="page__footer">
  {# <p><a href="{{ '/blog/' | url }}">← Вернуться</a></p> #}
</footer>
