---
asyncStyles:
  - /css/plugins/links.css
---
<!doctype html>
<html lang="{{ locale }}" class="document" data-theme="light">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="description" content="{{ renderData.description or description or metadata.description }}">
    <style>
    {% include "../assets/css/styles.css.njk" %}
    {%- for style in criticalStyles -%}
      {% include "../assets/" + style + ".njk" %}
    {%- endfor -%}
    </style>

    <link rel="alternate" href="{{ metadata.feed.path }}" type="application/atom+xml" title="{{ metadata.title }}">
    {%- if renderData.feed %}
    <link rel="alternate" href="{{ renderData.feed }}" type="application/atom+xml" title="{{ renderData.title or title or metadata.title }}">
    {%- endif %}
    {%- if draft == true %}
    <meta name="robots" content="noindex, nofollow" />
    {%- endif %}

    <link rel="apple-touch-icon" sizes="180x180" href="/img/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/img/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/img/favicon/favicon-16x16.png">
    <link rel="mask-icon" href="/img/favicon/safari-pinned-tab.svg" color="#333333">
    <link rel="shortcut icon" href="/img/favicon/favicon.ico">
    <meta name="msapplication-TileColor" content="#333333">
    <meta name="theme-color" content="#f7f6ee">
    <meta name="msapplication-config" content="/img/favicon/browserconfig.xml">
    {% if config.env === 'production '%}
    <link rel="manifest" href="/manifest.json">
    {% endif %}
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="{{ metadata.title }}">
    <meta name="apple-mobile-web-app-title" content="{{ metadata.title }}">
    <meta name="msapplication-starturl" content="{{ metadata.url }}">

	  <link rel="authorization_endpoint" href="https://indieauth.com/auth" />
    <link rel="token_endpoint" href="https://tokens.indieauth.com/token">
    <link rel="webmention" href="https://webmention.io/gurylev.com/webmention" />
    <link rel="pingback" href="https://webmention.io/gurylev.com/xmlrpc" />
    <link href="mailto:andrew@gurylev.com" rel="me">
    <link href="/keys/pgp_keys.asc" rel="pgpkey authn">
  </head>
  <body class="layout">
    {%- for style in asyncStyles %}
    <link rel="stylesheet" href="{{ style }}" media="print" onload="this.media='all'">
    <noscript><link rel="stylesheet" href="{{ style }}"></noscript>
    {%- endfor %}
    <header class="header">
      <div class="layout__wrapper header__wrapper">
        <div class="header__start">
          {% set navPages = collections[locale] | eleventyNavigation("Main") %}
          {% include "nav.njk" %}
        </div>
        <div class="header__end">
          {# {% set navPages = collections[locale] | eleventyNavigation("Types") %}
          {% include "nav.njk" %} #}
        </div>
      </div>
    </header>

    {{ content | safe }}

    <footer class="footer">
      <div class="layout__wrapper">
        <div class="footer__menu grid grid--4">
          <div>
            <h3>Posts by role</h3>
            <nav>
              <ul>
                {% set navRoles = collections[locale] | eleventyNavigation("Roles") %}
                {%- for entry in navRoles %}
                <li>
                  <a href="{{ entry.url }}">{{ entry.title }}</a>
                  {% set navSubRoles = collections[locale] | eleventyNavigation(entry.title) %}
                  <ul>
                  {%- for entry in navSubRoles %}<li><a href="{{ entry.url }}">{{ entry.title }}</a></li>{%- endfor -%}
                  </ul>
                </li>{%- endfor -%}
              </ul>
            </nav>
          </div>
          <div>
            <h3>Posts by qualities</h3>
            <nav>
              <ul>
                {% set navQualities = collections[locale] | eleventyNavigation("Qualities") %}
                {%- for entry in navQualities %}
                <li>
                  <a href="{{ entry.url }}">{{ entry.title }}</a>
                  {% set navSubQualities = collections[locale] | eleventyNavigation(entry.title) %}
                  <ul>
                  {%- for entry in navSubQualities %}<li><a href="{{ entry.url }}">{{ entry.title }}</a></li>{%- endfor -%}
                  </ul>
                </li>{%- endfor -%}
              </ul>
            </nav>
          </div>
          <div>
            <h3>Posts by type</h3>
            <nav>
              <ul>
                {% set navTypes = collections[locale] | eleventyNavigation("Types") %}
                {%- for entry in navTypes %}
                <li>
                  <a href="{{ entry.url }}">{{ entry.title }}</a>
                  {% set navSubTypes = collections[locale] | eleventyNavigation(entry.title) %}
                  <ul>
                  {%- for entry in navSubTypes %}<li><a href="{{ entry.url }}">{{ entry.title }}</a></li>{%- endfor -%}
                  </ul>
                </li>{%- endfor -%}
              </ul>
            </nav>
          </div>
          <div>
            <h3>Lists</h3>
            <nav>
              <ul>
                {% set navLists = collections[locale] | eleventyNavigation("Lists") %}
                {%- for entry in navLists %}<li><a href="{{ entry.url }}">{{ entry.title }}</a></li>{%- endfor -%}
              </ul>
            </nav>
          </div>
        </div>
        <div class="footer__wrapper">
          <div class="nav footer__copyright">
            <span class="nav__item">{{ "Andrey Gurylev's website" | i18n }} (<a href="/site/">{{ "about site" | i18n }}</a>)</span>
          </div>
          <nav class="nav footer__help">
            <a href="{% if locale ==='en' %}/ru{{ page.url }}{% else %}{{ page.url.replace('/ru','') }}{% endif %}" class="nav__item" aria-label="{{ 'Current language:' | i18n }} {% if locale ==='en' %}{{ 'English' | i18n }}{% else %}{{ 'Russian' | i18n }}{% endif %}">üåê {% if locale ==='en' %}–Ω–∞ —Ä—É—Å—Å–∫–æ–º{% else %}to English{% endif %}</a>
            <a class="nav__item" href="https://github.com/fogrew/gurylev.com/blob/master/{{ page.inputPath }}">{{ "Edit this page" | i18n }}</a>
          </nav>
        </div>
      </div>
    </footer>

    {%- for script in scripts %}
    <script async defer type="module" src="{{ script }}"></script>
    {%- endfor %}
    {% if config.env === 'production '%}
    <script>
      if ("serviceWorker" in navigator)
        navigator.serviceWorker.register("/service-worker.js");
    </script>
    {% endif %}
  </body>
</html>
