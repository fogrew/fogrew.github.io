---
styles: ["/css/index.css"]
scripts: []
---
<!doctype html>
<html lang="ru" class="document" data-theme="light">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="preload" href="{{ '/fonts/Lora.woff2' | url }}" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="{{ '/fonts/SourceSansPro.woff2' | url }}" as="font" type="font/woff2" crossorigin>
    {%- for style in styles %}
    <link rel="stylesheet" href="{{ style | url }}">
    {%- endfor %}
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">

    <link rel="apple-touch-icon" sizes="180x180" href="/img/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/img/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/img/favicon/favicon-16x16.png">
    <link rel="mask-icon" href="/img/favicon/safari-pinned-tab.svg" color="#333333">
    <link rel="shortcut icon" href="/img/favicon/favicon.ico">
    <meta name="msapplication-TileColor" content="#333333">
    <meta name="theme-color" content="#f7f6ee">
    <meta name="msapplication-config" content="/img/favicon/browserconfig.xml">
    {% if config.env === 'production '%}
    <link rel="manifest" href="/manifest.json">
    {% endif %}
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="{{ metadata.title }}">
    <meta name="apple-mobile-web-app-title" content="{{ metadata.title }}">
    <meta name="msapplication-starturl" content="{{ metadata.url | url }}">

	  <link rel="authorization_endpoint" href="https://indieauth.com/auth" />
    <link rel="token_endpoint" href="https://tokens.indieauth.com/token">
    <link rel="webmention" href="https://webmention.io/gurylev.com/webmention" />
    <link rel="pingback" href="https://webmention.io/gurylev.com/xmlrpc" />
    <link href="mailto:andrew@gurylev.com" rel="me">
    <link href="/keys/pgp_keys.asc" rel="pgpkey authn">
  </head>
  <body class="layout">
    <header class="layout__header header">
      <div class="header__start">
        {% include "nav.njk" %}
      </div>
      <div class="header__end">
        {% include "search.njk" %}
      </div>
    </header>

    {{ content | safe }}

    <footer class="layout__footer footer">
      <p class="footer__copyright">Сайт Андрея Гурылева</p>
      <p class="footer__help"><a class="footer__help" href="https://github.com/fogrew/gurylev.com/blob/master/{{ page.inputPath }}">Редактировать эту страницу</a>.</p>
    </footer>

    <aside class="layout__dev" id="dev">
      {% block dev %}
      <table>
      {% for key, value in config %}
        <tr>
          <td>{{ key }}:</td>
          <td>{{ value }}</td>
        </tr>
      {% endfor %}
      </table>
      {% endblock %}
    </aside>

    {%- for script in scripts %}
    <script async defer type="module" src="{{ script | url }}"></script>
    {%- endfor %}
    <script>
      if ("serviceWorker" in navigator)
        navigator.serviceWorker.register("/service-worker.js");
    </script>
  </body>
</html>
